<div class="service_types container">
  <%if user_signed_in? && is_admin? %>
  <%= link_to "Add a Service", new_service_type_path, id: "new_service_type_link", remote: true %>
  <br><br>
  <% end %>

  <% @service_types.each do |st| %>
  <ul id="service_type_list" class="nav nav-tabs"> 
    <li>
      <h3><%= st.name %></h3>
      <p><%= st.description %></p>
      <%if user_signed_in? && is_admin? %>
        <p><%= link_to "Delete", st, method: :delete, class: "delete_link", remote: true %></p>
        <p><%= link_to "Edit", edit_service_type_path(st), class: "edit_link", remote: true %></p>
      <% end %>
      <hr>
      </li>
    <% end %>
  </ul>

</div>

