<li><h2><%= @product.name %></h2>
  <p><%= @product.description %></p>
  <p>$<%= @product.price %>0.00</p>
  <%= image_tag(@product.image_url) %>
  <% @product.categories.each do |cat| %>
  <p><%= cat.name %></p>
  <% end %>
