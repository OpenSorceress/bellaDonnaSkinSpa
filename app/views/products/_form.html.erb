<%= render 'shared/form_errors', :object => @product %>

<%= nested_form_for @product, :html => {:id => "new_product", :class => "form form-inline"}, remote: true do |f| %>
<h2>Add New Product</h2>
<a class="close" href="">X</a>
<div class="form-group">
 <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
 </div>
 <div class="form-group">
 <%= f.text_field :price, class: "form-control", placeholder: "Price" %></div><br>
 <div class="form-group">
 <%= f.text_field :image_url, class: "form-control", placeholder: "Image URL" %></div>
 <div class="form-group">
 <%= f.text_field :description, class: "form-control", placeholder: "Description" %></div><br>
 <div class="form-group">
    <%= f.fields_for :categories do |c| %>
      
      <%= c.text_field :name, class: "form-control", placeholder: "Category" %>
      <%= c.text_area :description, class: "form-control", placeholder: "Category Description" %>
    
    <% end %>
    </div>
 <%= f.submit class: "btn btn-primary"  %>
 
 <% end %>