<h2>Add New Product</h2>

<%= nested_form_for @product, :html => {:id => "new_product", :class => "form form-inline"}, remote: true do |f| %>
<div class="form-group">
 <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
 </div>
 <div class="form-group">
 <%= f.text_field :price, class: "form-control", placeholder: "Price" %></div>
 <div class="form-group">
 <%= f.text_field :image_url, class: "form-control", placeholder: "Image URL" %></div>
 <div class="form-group">
 <%= f.text_field :description, class: "form-control", placeholder: "Description" %></div>
 <div class="form-group">
    <%= f.fields_for :categories do |c| %>
      
      <%= c.text_field :name, class: "form-control", placeholder: "Category" %>
    
    <% end %>
    </div>
 <%= f.submit "Add Product", class: "btn btn-success"  %>
 <a class="close" href="">X</a>
 <% end %>