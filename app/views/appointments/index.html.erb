<div class="site-container appointments container">

<h1>My Appointments</h1>

  <ul id="appointment_list">
    <% @appointment.each do |a| %>
    <div class="col-sm-6 appointment">
      <li>
        <span>Created::</span> 
            <p><%= a.created_at %></p>
        <span>Client Name:</span> 
            <p><%= a.first_name %> <%= a.last_name %></p>
        <span>Phone Number:</span> 
            <p><%= a.phone_number %></p>
        <span>New or Returning Client:</span> 
            <p><%= a.is_new %></p>
        <span>First choise:</span>
            <p><%= a.first_date %> <%= a.first_time %></p>
        <span>Second choise:</span>
        <p><%= a.second_date %> <%= a.second_time %></p>
        <span>Third choice:</span>
         <p><%= a.third_date %> <%= a.third_time %></p>
        <span>Appointment Type:</span>
            <p><%= a.appointment_type %></p>
        <span>Client Comments:</span>
            <p><%= a.comments %></p>
        <%= link_to "Delete Appointment", a, method: :delete, class: "delete_link btn btn-danger", remote: true %>
      </div>
    </li> 
    <% end %>
  </ul>
</div>